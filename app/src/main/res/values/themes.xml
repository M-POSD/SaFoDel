<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaFoDel" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">#83BE9E</item>-->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow_10</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="NavigationbarBottomStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">#83BE9E</item>-->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow_10</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="NavigationbarLeftTextStyle" parent="TextAppearance.Design.Tab">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/button_tint</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="MapboxCustomManeuverStyle" parent="MapboxStyleManeuverView">
        <item name="maneuverViewBackgroundColor">@color/primary_green</item>
        <item name="subManeuverViewBackgroundColor">@color/green</item>
        <item name="upcomingManeuverViewBackgroundColor">@color/green</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/primary_green</item>
    </style>


</resources>