<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaFoDel" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">#83BE9E</item>-->
        <item name="colorPrimary">@color/deep_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
            <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NavigationbarBottomStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">#83BE9E</item>-->
        <item name="colorPrimary">@color/secondary_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/notosansjp_bold</item>
    </style>

    <style name="NavigationbarLeftTextStyle" parent="TextAppearance.Design.Tab">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/green_blue</item>
        <item name="colorOnPrimary">@color/light_green</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/notosansjp_bold</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/green_blue</item>
        <item name="colorOnPrimary">@color/light_green</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/notosansjp_bold</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/button_tint</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/notosansjp_bold</item>
    </style>

    <style name="MapboxCustomManeuverStyle" parent="MapboxStyleManeuverView">
        <item name="maneuverViewBackgroundColor">@color/third_green</item>
        <item name="subManeuverViewBackgroundColor">@color/green</item>
        <item name="upcomingManeuverViewBackgroundColor">@color/green</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/secondary_green</item>
    </style>

    <style name="textStyle14">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/notosansjp_bold</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">@color/primary_green</item>
    </style>

    <style name="textStyle16">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/notosansjp_bold</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">@color/primary_green</item>
    </style>

    <style name="textStyle20_black">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/notosansjp_black</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">@color/primary_green</item>
    </style>

    <style name="worm_dot_indicator">
        <item name="dotsColor">@color/secondary_yellow</item>
        <item name="dotsStrokeColor">@color/primary_green</item>
        <item name="dotsCornerRadius">8dp</item>
        <item name="dotsSize">12dp</item>
        <item name="dotsSpacing">4dp</item>
        <item name="dotsStrokeWidth">2dp</item>
    </style>
</resources>