<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="right">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/sc_cardLayoutL"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/primary_green_10"
                android:weightSum="10">

                <TextView
                    android:id="@+id/sc_edit_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="4.5"
                    android:fontFamily="@font/rubik_bold"
                    android:gravity="center"
                    android:text="Demo"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5.5"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/sc_image_view_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:paddingTop="5dp"
                        android:src="@drawable/tip" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="left">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/sc_cardLayoutR"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/primary_green_10"
                android:weightSum="10">

                <TextView
                    android:id="@+id/sc_edit_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="4.3"
                    android:fontFamily="@font/rubik_bold"
                    android:gravity="center"
                    android:text="Demo"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5.7"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/sc_image_view_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:paddingTop="5dp"
                        android:src="@drawable/tip" />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>