<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="right">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/sc_cardLayoutL"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/primary_green_10"
                android:weightSum="10">

                <TextView
                    android:id="@+id/sc_edit_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="4.5"
                    style="@style/textStyle20_bold_black"
                    android:gravity="center"
                    android:text="Demo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5.5"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/sc_image_view_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/tipv2" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="left">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/sc_cardLayoutR"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/primary_green_10"
                android:weightSum="10">

                <TextView
                    android:id="@+id/sc_edit_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="4.2"
                    style="@style/textStyle20_bold_black"
                    android:gravity="center"
                    android:text="Demo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5.8"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/sc_image_view_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:layout_margin="2dp"
                        android:src="@drawable/in_an_accident2" />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>