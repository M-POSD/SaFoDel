<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.menuB.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/coordinatorLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.25"
                        android:scaleY="1.25"
                        android:src="@drawable/wear_nothing"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.786" />

                    <ImageView
                        android:id="@+id/helmet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="137dp"
                        android:alpha="0"
                        android:scaleX="1.6"
                        android:scaleY="1.6"
                        android:src="@drawable/helmet"
                        app:layout_constraintBottom_toBottomOf="@+id/driver"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.531"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.916" />

                    <ImageView
                        android:id="@+id/backpack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="127dp"
                        android:layout_marginBottom="101dp"
                        android:alpha="0"
                        android:scaleX="1.25"
                        android:scaleY="1.3"
                        android:src="@drawable/backpack"
                        android:translationX="25dp"
                        app:layout_constraintBottom_toBottomOf="@+id/driver"
                        app:layout_constraintEnd_toEndOf="@+id/driver"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/driver"
                        app:layout_constraintVertical_bias="1.0" />

                    <ImageView
                        android:id="@+id/headlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0"
                        android:visibility="invisible"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:src="@drawable/headlight2"

                        app:layout_constraintBottom_toBottomOf="@+id/driver"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.147"
                        app:layout_constraintStart_toEndOf="@+id/driver"
                        app:layout_constraintTop_toTopOf="@+id/driver"
                        app:layout_constraintVertical_bias="0.603" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@color/primary_green"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/notosansjp_bold"
                android:gravity="center"
                android:text="Preparing you for a safe food delivery on bicycle"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/notosansjp_bold"
                android:gravity="center"
                android:text="'Don’t put your lives at risk for other’s convenience'"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <include
                android:id="@+id/epicCard12"
                layout="@layout/small_cards" />

            <include
                android:id="@+id/epicCard34"
                layout="@layout/small_card" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/notosansjp_bold"
                android:gravity="center"
                android:text="Click map to see accident locations for your suburb"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <!--            <include-->
            <!--                android:id="@+id/epicCard34"-->
            <!--                layout="@layout/small_card" />-->

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/toolbar"
        layout="@layout/simple_toolbar" />

    <ImageView
        android:id="@+id/light_mode"
        android:layout_marginTop="50dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_baseline_light_mode"/>

    <ImageView
        android:id="@+id/dark_mode"
        android:layout_marginTop="50dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_baseline_dark_mode"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
