<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="@dimen/mapbox_notification_maneuver_image_height"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/lga_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/lga_item"
        android:layout_centerVertical="true"
        style="@style/textStyle20_bold_black"
        tools:text="Choose the LGA Area"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_expand_more_black_24" />


</RelativeLayout>