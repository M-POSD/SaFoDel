<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/current_weather_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="70dp"
            android:layout_marginBottom="10dp"
            android:scaleX="4"
            android:scaleY="3"
            android:alpha="0.2"
            android:visibility="invisible"
            android:src="@drawable/rain" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/current_weather"
                style="@style/textStyle16_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/current_weather" />

            <TextView
                android:id="@+id/current_weather_info"
                style="@style/textStyle16_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:text="@string/not_available" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/current_temp"
                style="@style/textStyle16_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/current_temperature" />

            <TextView
                android:id="@+id/current_temp_info"
                style="@style/textStyle16_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:text="@string/not_available" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/current_humidity"
                style="@style/textStyle16_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/current_humidity" />

            <TextView
                android:id="@+id/current_humidity_info"
                style="@style/textStyle16_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:text="@string/not_available" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/current_wind_speed"
                style="@style/textStyle16_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="@string/current_wind_speed" />

            <TextView
                android:id="@+id/current_wind_speed_info"
                style="@style/textStyle16_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:text="@string/not_available" />
        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>