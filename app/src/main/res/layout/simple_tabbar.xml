<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:weightSum="1"
        android:background="@color/white"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:theme="@style/NavigationbarBottomStyle"
            app:tabBackground="@drawable/tab_color_selector"
            app:tabGravity="fill"
            app:tabInlineLabel="true"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TabStyle"
            app:tabTextColor="@color/deep_green" />

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"/>
        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/worm_dots_indicator_tabbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:dotsColor="@color/secondary_yellow"
            app:dotsStrokeColor="@color/secondary_green"
            app:dotsCornerRadius="8dp"
            app:dotsSize="12dp"
            app:dotsSpacing="4dp"
            app:dotsStrokeWidth="2dp"
            />

        <TextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/notosansjp_bold"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Find how to ride safely while delivering food"
            android:textColor="@color/secondary_green"
            android:textSize="16dp" />


    </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/linearLayout"
        android:layout_weight="5"
        android:background="@color/primary_green" />
</LinearLayout>