<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragment.menuBottom.MapFragment">


    <com.mapbox.maps.MapView
        android:id="@+id/mapView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.mapbox.navigation.ui.maps.camera.view.MapboxRecenterButton
        android:id="@+id/recenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent" />

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            mapbox:mapbox_cameraTargetLat="-32.557013"
            mapbox:mapbox_cameraTargetLng="-56.149056"
            mapbox:mapbox_cameraZoom="5.526846">
        </com.mapbox.mapboxsdk.maps.MapView>

        <include
            layout="@layout/simple_toolbar"
            android:id="@+id/toolbar" />

    <FrameLayout
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal">

        <View
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:alpha="0.9"
            android:background="@drawable/white_shape">
        </View>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_search_black_36"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/search_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textSize="16dp"
            android:fontFamily="@font/rubik_medium"
            android:hint="@string/tap_to_search_address" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/search_map1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <View
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:alpha="0.9"
            android:background="@drawable/white_shape"/>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="56dp"
            app:smsp_enableDismissSearch="true"
            app:smsp_enableErrorLabel="false"
            app:smsp_errorText="@string/error"
            app:smsp_hint="@string/select_area"
            app:smsp_hintColor="#388E3C"
            app:smsp_isSearchable="true"
            app:smsp_itemColor="@color/deep_green"
            app:smsp_itemListColor="@color/primary_green"
            app:smsp_itemListHintBackgroundColor="#808080"
            app:smsp_itemListHintColor="#FFFFFF"
            app:smsp_multilineError="false"
            app:smsp_searchHeaderBackgroundColor="@color/primary_green"
            app:smsp_searchTextColor="@color/primary_green"
            app:smsp_selectedItemListColor="@color/black"
            app:smsp_underlineSize="0dp"
            mapbox:smsp_hintSize="13dp"
            mapbox:smsp_showDropdownHint="false" />

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatButtonFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        mapbox:fabSize="mini"
        mapbox:backgroundTint="@color/white"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:contentDescription="desc"
        android:src="@drawable/outline_filter_alt_black_36" />

    <androidx.cardview.widget.CardView
        android:id="@+id/tripProgressCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="invisible"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false">
        <com.mapbox.navigation.ui.tripprogress.view.MapboxTripProgressView
            android:id="@+id/tripProgressView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>


    <com.mapbox.navigation.ui.maneuver.view.MapboxManeuverView
        android:id="@+id/maneuverView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MapboxCustomManeuverStyle"
        android:layout_margin="4dp"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/route_retrieval_progress_spinner"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mapView"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        mapbox:fabSize="mini"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        mapbox:backgroundTint="@color/white"
        android:contentDescription="desc"
        android:src="@drawable/baseline_gps_fixed_black_36"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatButtonNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        mapbox:fabSize="mini"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        mapbox:backgroundTint="@color/white"
        android:contentDescription="desc"
        android:src="@drawable/baseline_assistant_direction_black_36"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatButtonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        mapbox:fabSize="mini"
        mapbox:backgroundTint="@color/white"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        android:contentDescription="desc"
        android:src="@drawable/outline_highlight_off_black_36" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>