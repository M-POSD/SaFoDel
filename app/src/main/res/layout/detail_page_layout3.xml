<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentPageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:background="@drawable/default_option_border_bg"
            android:fontFamily="@font/notosansjp_bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Demo"
            android:textColor="@color/gray2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosansjp_bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Beware of the RISKS of delivering on e-bikes"
            android:textColor="@color/secondary_green"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/primary_green"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The following labels indicate a helmet has been approved"
            android:textColor="@color/white"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/notosansjp_bold"
            android:textSize="14dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>



