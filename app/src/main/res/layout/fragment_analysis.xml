<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    tools:context=".fragment.menuBottom.AnalysisFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/simple_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fadeScrollbars="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/did_you_know"
                    style="@style/textStyle20_bold_black"
                    android:gravity="center"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager2_home"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    android:background="@color/snow" />

                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                    android:id="@+id/worm_dots_indicator_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    style="@style/worm_dot_indicator"
                    />

                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                    android:id="@+id/spinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:smsp_enableDismissSearch="true"
                    app:smsp_enableErrorLabel="false"
                    app:smsp_errorText="@string/error"
                    app:smsp_floatingLabelColor="@color/deep_green"
                    android:background="@drawable/snow_shape"
                    app:smsp_floatingLabelText="Suburb:"
                    app:smsp_hint="@string/select_suburb"
                    app:smsp_hintColor="#388E3C"
                    app:smsp_hintSize="16dp"
                    app:smsp_isSearchable="true"
                    app:smsp_itemColor="@color/deep_green"
                    app:smsp_itemListColor="@color/primary_green"
                    app:smsp_itemListHintBackgroundColor="#808080"
                    app:smsp_itemListHintColor="#FFFFFF"
                    app:smsp_multilineError="false"
                    app:smsp_searchHeaderBackgroundColor="@color/primary_green"
                    app:smsp_selectedItemListColor="@color/black"
                    app:smsp_underlineSize="0dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        style="@style/textStyle20_bold_black"
                        android:text="@string/top_5_roads_by_accident_total"/>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/barChart"
                        android:layout_width="400dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="10dp"
                        style="@style/textStyle16_green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/accident_times_for_different_hourly_periods_of_the_day"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="400dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:paddingHorizontal="10dp"
                        style="@style/textStyle14_gray"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
